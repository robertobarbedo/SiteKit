{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/your-org/sitecore-yaml-schemas/main/pagetypes-schema.json",
  "title": "Sitecore Page Types Configuration",
  "description": "JSON Schema for Sitecore pagetypes.yaml configuration file",
  "type": "object",
  "required": ["pagetypes"],
  "properties": {
    "pagetypes": {
      "type": "array",
      "description": "List of page type (same as Sitecore Templates)",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Page type name - (or Sitecore Template name) (free format)",
            "minLength": 1,
            "examples": ["Content Page", "Landing Page", "FAQ Page"]
          },
          "page_base_template": {
            "type": "string",
            "description": "Base template that this page type inherits from",
            "minLength": 1,
            "examples": ["Standard template", "Base Page", "Content Base"]
          },
          "fields": {
            "type": "array",
            "description": "Page type fields (or Sitecore Template Fields)",
            "items": {
              "type": "object",
              "required": ["name", "type"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Field name (Pascal Case format)",
                  "minLength": 1,
                  "examples": ["Heading", "Text", "BackgroundImage", "PrimaryButton"],
                  "pattern": "^[A-Z][a-zA-Z0-9]*([A-Z][a-zA-Z0-9]*)*$"
                },
                "type": {
                  "type": "string",
                  "description": "Field type from supported Sitecore field types",
                  "enum": [
                    "Single-Line Text",
                    "Date",
                    "DateTime", 
                    "Checkbox",
                    "File",
                    "Image",
                    "Integer",
                    "Multi-Line Text",
                    "Number",
                    "Rich Text",
                    "Checklist",
                    "Droplist",
                    "Multilist",
                    "Treelist",
                    "Taglist",
                    "Multiroot Treelist",
                    "Droplink",
                    "General Link"
                  ]
                },
                "source": {
                  "type": "string",
                  "description": "Field source (free format string)",
                  "examples": ["query:./", "/sitecore/content/Global/Settings"]
                },
                "default": {
                  "type": "string",
                  "description": "Field default value (free format string)",
                  "examples": ["$name", "Default Value"]
                },
                "section": {
                  "type": "string",
                  "description": "Field section grouping",
                  "minLength": 1,
                  "examples": ["Content", "Configuration", "Meta Data"]
                }
              },
              "additionalProperties": false
            }
          },
          "layout": {
            "type": "array",
            "description": "Layout structure definition for this page type",
            "items": {
              "$ref": "#/definitions/layoutComponent"
            },
            "minItems": 1
          },
          "insertoptions": {
            "type": "array",
            "description": "List of page types that can be inserted as children of this page type. Same as the insert options in Sitecore",
            "items": {
              "type": "string",
              "minLength": 1
            },
            "examples": [["Content Page", "Landing Page"]]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "layoutComponent": {
      "type": "object",
      "required": ["component"],
      "properties": {
        "component": {
          "type": "string",
          "description": "Component name - must match a component defined in components.yaml",
          "minLength": 1,
          "pattern": "^[A-Z][a-zA-Z0-9]*( [A-Z][a-zA-Z0-9]*)*$",
          "examples": ["Container Wrapper", "One Column", "Two Column", "Header", "Footer"]
        },
        "children": {
          "type": "array",
          "description": "Child components nested within this component",
          "items": {
            "$ref": "#/definitions/layoutComponent"
          },
          "minItems": 1
        },
        "placeholder": {
          "type": "string",
          "description": "Target placeholder name for this component",
          "minLength": 1,
          "pattern": "^[a-zA-Z][a-zA-Z0-9-_]*$",
          "examples": ["main", "content", "header", "footer", "sidebar"]
        },
        "datasource": {
          "type": "object",
          "description": "Datasource configuration for this component instance",
          "properties": {
            "path": {
              "type": "string",
              "description": "Sitecore item path for datasource",
              "minLength": 1,
              "pattern": "^/sitecore/.*$"
            },
            "template": {
              "type": "string",
              "description": "Template name or ID for datasource items",
              "minLength": 1
            }
          },
          "additionalProperties": true
        },
        "parameters": {
          "type": "object",
          "description": "Rendering parameters for this component instance",
          "additionalProperties": {
            "type": "string",
            "description": "Parameter value"
          }
        }
      },
      "additionalProperties": false
    }
  }
} 